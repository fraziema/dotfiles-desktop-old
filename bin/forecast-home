#!/usr/bin/bash
curl -s "https://forecast.weather.gov/MapClick.php?lat=36.9087&lon=-80.8672&unit=0&lg=english&FcstType=text&TextType=1"  |\
	   	html2text  |\
		sed -e 's/Last_Update://' -e 's/\=//g' |\
	   	tail -n +3  |\
		sed -z -e 's/\n/##/g' -e 's/######/\n\n/' -e 's/####/\n\n/g' -e 's/##/ /g' |\
 	   	head -n 7  |\
		fmt -g 30 | tee ~/.wtemp

if [ `wc -l ~/.wtemp | awk '{print $1;}' ` -eq 0 ]
then
		echo "Cannot access weather.gov"
		echo
		cat ~/.weather
else
		mv ~/.wtemp ~/.weather
fi
		
